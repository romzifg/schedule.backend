generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["schedule"]
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schedules Schedule[]

  @@schema("schedule")
}

model Doctor {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schedules Schedule[]


  @@schema("schedule")
}

model Schedule {
  id          String   @id @default(uuid())
  objective   String
  customerId  String
  doctorId    String
  scheduledAt DateTime

  customer Customer @relation(fields: [customerId], references: [id])
  doctor   Doctor   @relation(fields: [doctorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("schedule")
}
